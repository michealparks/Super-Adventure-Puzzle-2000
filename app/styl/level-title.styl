$time = 600ms
$easeInOutQuart = cubic-bezier(0.770, 0.000, 0.175, 1.000)

#level-title
  position: absolute
  top: 0
  left: 0
  perspective: 600px
  width: 100%
  height: 100%
  font-family: 'Press Start 2P'
  transition:  visibility 0 $time
  visibility: hidden
  
  &.active
    transition: visibility 0 0
    visibility: visible
    
    #background
      transform: rotateY(0)
      
    #text
      opacity: 1
      transform: rotateY(0) scale(1)
    
  #background
    position: absolute
    top: 50%
    left: 50%
    margin: -150px
    width: 300px
    height: 300px
    background: url('img/mountains.png')
    background-size: contain
    background-repeat: no-repeat
    background-origin: center
    transition: transform $time $easeInOutQuart
    transform-origin: center
    transform: rotateY(90deg)
    
  #text
    position: absolute
    top: 50%
    left: 50%
    height: 70%
    width: auto
    font-size: 22px
    color: #fff
    transition: opacity $time, transform $time $easeInOutQuart
    opacity: 0
    transform: rotateY(90deg) scale(0)
    
    span
      font-size:  30px