@import 'nib'

$time = 600ms
$easeInOutQuart = cubic-bezier(0.770, 0.000, 0.175, 1.000)

#level-title
  perspective 600px
  absolute top left
  size 100% 100%
  font-family 'Press Start 2P' //Cincel Decorative
  transition  visibility 0 $time
  
  visibility hidden
  
  &.active
    transition visibility 0 0
    visibility visible
    
    #background
      transform rotateY(0)
      
    #text
      opacity 1
      transform rotateY(0) scale(1)
    
  #background
    absolute top 50% left 50%
    margin -150px
    size 300px 300px
    background url('img/mountains.png')
    background-size contain
    background-repeat no-repeat
    background-origin center
    transition transform $time $easeInOutQuart
    transform-origin center
    transform  rotateY(90deg)
    
  #text
    absolute top 50% left 50%
    size 70% auto
    font-size 22px
    color #fff
    transition opacity $time, transform $time $easeInOutQuart
    opacity    0
    transform  rotateY(90deg) scale(0)
    
    span
      font-size 30px