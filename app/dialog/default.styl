@import 'nib'

$easeInOutQuart = cubic-bezier(0.770, 0.000, 0.175, 1.000)

.dialog
  user-select none
  fixed bottom left
  height 100px
  font-family "vt323"
  background-color #fff
  opacity 0
  transform translate(0, 100%)
  transition opacity 250ms, transform 400ms $easeInOutQuart
  
  &.active
    opacity 1
    transform translate(0, 0)
    
  #next, #choice
    absolute bottom right
    text-align center
    font-size 30px
    opacity 0
    pointer-events none
    transition opacity 250ms
    
    &.active
      opacity 1
      pointer-events auto
  
  #text
    width calc(100% - 60px)
    box-sizing border-box
    padding 10px
    font-size 24px
    
  #next
    width 50px
    line-height 100px
    font-size 30px
    
  #choice
    absolute top right
    size 60px 100%
    
  #yes
    line-height 48px
    border-bottom 2px solid
    
  #no
    line-height 50px